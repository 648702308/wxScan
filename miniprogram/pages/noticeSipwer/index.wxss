.notice-view {
  height: 90rpx;
  background: #ececec;
  display: flex;
  align-content: center;
  justify-content: space-between;
  padding: 20rpx 25rpx;
  overflow: hidden;
}

.notice-view+.notice-view {
  margin-top: 30rpx;
}

.notice-header {
  display: flex;
  align-items: center;
  line-height: 1;
  margin-right: 20rpx;
  color: #d88454;
  flex-shrink: 0;
}

.notice-header .icon-notice {
  font-size: 36rpx;
}

.swiper-container {
  height: 100%;
  width: 100%;
}

.list-item {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 1rpx;
  color: #828282;
}

.notice-footer {
  flex-shrink: 0;
  color: #B0B0B0;
  margin-left: 30rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.notice-content-view {
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.left-box {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
}

.left-text {
  position: absolute;
  left: 0;
  width: 40rpx;
  height: 100%;
  background: linear-gradient(to left, rgba(241, 241, 241, 0), rgba(241, 241, 241, 1));
  z-index: 99;
}

.right-text {
  position: absolute;
  right: -1rpx;
  width: 40rpx;
  height: 100%;
  background: linear-gradient(to left, rgba(241, 241, 241, 1), rgba(241, 241, 241, 0));
  z-index: 99;
}

.content-box {
  overflow: hidden;
}

.content-text {
  color: #5e5e5e;
  white-space: nowrap;
  font-size: 30rpx;
}