page {
  width: 100%;
  height: 100%;
  background-color: #B9BEC4;
}

.scan-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.scan-out-box {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.scan-content {
  height: 100%;
  overflow: hidden;
  background-color: #ffffff;
}

.scroll-view {
  height: 100%;
  overflow: hidden;
}

.swiper-container {
  height: 70rpx;
}

.list-item {
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  background-color: rgba(0,0,0,0.2);
}
